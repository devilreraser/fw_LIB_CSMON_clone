    <!-- DpiAware_Method1: The app.config based method (preferred) to make app dpi aware. 
         This method also requires to uncomment Win10 compatibility in app.manifest -->
    <!--<System.Windows.Forms.ApplicationConfigurationSection>
        <add key="DpiAwareness" value="PerMonitorV2"/>
    </System.Windows.Forms.ApplicationConfigurationSection>-->
  
    <!-- DpiAware_Method2: needed if dpi aware settings are uncommented in app.manifest. 
         Works without this key, but comment in manifest says it's needed. -->
    <!--<appSettings>
        <add key="EnableWindowsFormsHighDpiAutoResizing" value="true" />
    </appSettings>-->

    <!-- UPDATE 20191127: Force legacy features because otherwise we often get black background of edited DataGridView cell after we switched to framework v4.8 
                          Idea taken from here: https://docs.microsoft.com/en-us/dotnet/framework/migration-guide/retargeting/4.7-4.8#windows-forms -->
    <runtime>
        <!-- AppContextSwitchOverrides value attribute is in the form of 'key1=true/false;key2=true/false  -->
        <AppContextSwitchOverrides value="Switch.UseLegacyAccessibilityFeatures=true;Switch.UseLegacyAccessibilityFeatures.2=true;Switch.UseLegacyAccessibilityFeatures.3=true" />
